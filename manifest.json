{
  "manifest_version": 3,
  "name": "PRO ChatGPT Chrome Extension",
  "version": "1.3.1",
  "description": "Modern UI popup with streaming chat, presets, and page summarization. Minimal host permission for OpenAI API only.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "PRO ChatGPT Chrome Extension",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  }
}